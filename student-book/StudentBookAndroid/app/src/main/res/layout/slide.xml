<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/slidelinearlayout">

    <TextView
            android:padding="16dp"
            android:id="@+id/question"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="Question Here"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <Button
            android:text="Answer A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answerA"/>
    <Button
            android:text="Answer B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answerB"/>
    <Button
            android:text="Answer C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answerC"/>
    <Button
            android:text="Answer D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/answerD"/>


</LinearLayout>